.header
   width 1440px
   height 60px
   display flex
   flex-wrap wrap 
   justify-content: space-between

   
      
.logo
   width 255px
   height 61px
   margin-left: 119px
   background: url('../svgicons/header/icon_fox_digital.png')
   background-size: 100% 100%
   
   &:hover
      background: url('../svgicons/header/icon_fox_digital_hover.png')
      background-size: 100% 100%
         
         
.navbar 
   width 541px
   height: 60px
   margin-right: 118px
   margin-top: 5px

   &__nav-links
      display flex
      width 100%
      list-style: none
      align-items: center
      padding: 0px
      gap: 20px
      justify-content: space-between
      
      &>li
         display: inline-block
         font-size: 18px
         color : #787878
         font-family: 'Raleway'
         letter-spacing: 1px;

         &>a:visited
            color:#787878
            text-decoration: none
                     
         &>a:link
            color:#787878
            text-decoration: none

         &>a:hover
            background: linear-gradient(90deg, #ff0034, #f69801)
            -webkit-background-clip: text
            -webkit-text-fill-color: transparent
            font-size:20px 
            text-decoration: underline 
            text-decoration-color: #f49a2c
            transition: all 0.8s ease
            
.burger
   display: none
   flex-direction: column
   gap: 5px
   background: none
   border: none
   cursor: pointer
   
   &>span
      width: 25px;
      height: 3px;
      background: white;
      display: block;
